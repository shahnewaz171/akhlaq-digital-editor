{
  "name": "@akhlaqdigital/editor",
  "version": "0.14.12",
  "description": "A powerful, modern rich text editor for React applications and vanilla JavaScript. Built with Tiptap and optimized for performance, accessibility, and developer experience.",
  "author": "Akhlaq Digital <akhlaqdigital@gmail.com>",
  "license": "MIT",
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "tiptap",
    "react",
    "typescript",
    "cdn",
    "mentions",
    "emoji",
    "markdown"
  ],
  "main": "npm/ad-editor.cjs.js",
  "module": "npm/ad-editor.es.js",
  "types": "npm/ad-editor.d.ts",
  "public": true,
  "sideEffects": false,
  "files": [
    "dist",
    "npm"
  ],
  "exports": {
    ".": {
      "types": "./npm/ad-editor.d.ts",
      "import": "./npm/ad-editor.es.js",
      "require": "./npm/ad-editor.cjs.js"
    },
    "./cdn": "./dist/ad-editor.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "predev": "next lint",
    "dev": "next dev",
    "prebuild": "next lint",
    "build": "next build",
    "build:cdn": "vite build --config cdn.config.ts",
    "build:npm:dev": "vite build --config npm.config.ts --mode development",
    "build:npm": "vite build --config npm.config.ts --mode production",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.build.json && node cleanup-types.js",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "echo 'âœ… pnpm build script warnings are safe to ignore - see .pnpmrc for details'"
